// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your models here 

model User {
  id         String      @id // This will store Clerk's user ID
  email      String      @unique
  firstName  String?
  lastName   String?
  imageUrl   String?
  portfolios Portfolio[]
  analytics  Analytics[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   Json
  latest    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, latest])
  @@index([userId])
}

model Analytics {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  type       String   // "portfolio_view" | "project_view"
  projectId  String?  // Optional, for project-specific analytics
  metadata   Json?    // Additional data like referrer, device, etc.
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}
